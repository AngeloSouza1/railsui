<div class="py-3 border-t border-slate dark:border-slate-700 flex  <%= local_assigns[:back].present? ? "justify-between" : "justify-end" %>">
  <% if local_assigns[:back].present? %>
    <%= link_to local_assigns[:back], class: "text-indigo-600 underline hover:text-indigo-600 font-medium dark:text-indigo-400 dark:hover:text-indigo-300 flex items-center group" do %>
      <div class="w-8 h-8 rounded bg-transparent group-hover:bg-indigo-50 flex items-center justify-center group-hover:-translate-x-1 group-hover:transition group-hover:transform group-hover:dark:bg-slate-700/50 dark:border dark:border-transparent group-hover:dark:border-slate-600 group-hover:dark:text-indigo-200">
        <%= render_svg "arrow-left", styles: "stroke-current w-5 h-5" %>
      </div>
      <span class="ml-2"><%= local_assigns[:back_label] %></span>
    <% end %>
  <% end %>
  <% if local_assigns[:next].present? %>
    <%= link_to local_assigns[:next], class: "text-indigo-600 underline hover:text-indigo-600 font-medium dark:text-indigo-400 dark:hover:text-indigo-300 flex items-center group" do %>
      <span class="mr-2"><%= local_assigns[:next_label]%></span>
      <div class="w-8 h-8 rounded bg-transparent group-hover:bg-indigo-50 flex items-center justify-center group-hover:translate-x-1 group-hover:transition group-hover:transform group-hover:dark:bg-slate-700/50 dark:border dark:border-transparent group-hover:dark:border-slate-600 group-hover:dark:text-indigo-200">
        <%= render_svg "arrow-right", styles: "stroke-current w-5 h-5" %>
      </div>
    <% end %>
  <% end %>
</div>
