<%= render "railsui/admin/field_layout" do %>
  <% content_for :explainer, flush: true do %>

  <% end %>

  <div class="tw-py-2">
    <%= f.button id: "config_button", class: "rui-btn", data: {configuration_target: "submit" } do %>
      <%= tag.span "Save changes" %>
    <% end %>

    <p class="tw-text-sm tw-mt-3 tw-text-slate-500 dark:tw-text-slate-300">Saving will automatically restart your app and install any dependencies.</p>
  </div>

  <div data-configuration-target="saving" class="tw-hidden tw-fixed tw-inset-0 tw-w-full tw-h-full tw-bg-indigo-800 tw-z-40">
    <div class="tw-flex tw-flex-col tw-justify-center tw-h-full tw-items-center tw-relative tw-z-50">
      <div class="tw-mb-6">
        <%= render "railsui/shared/logo_light" %>
      </div>
      <h3 class="tw-text-xl tw-text-white tw-font-bold tw-text-center tw-mb-3">Saving changes...</h3>
      <%= render_svg "loading", styles: "tw-w-10 tw-h-10" %>
    </div>
    <canvas id="canvas" data-controller="canvas" class="tw-fixed tw-inset-0 tw-w-full tw-h-full"></canvas>
  </div>
<% end %>
