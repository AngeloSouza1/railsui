<div class="flex items-center">
  <div class="flex items-center flex-1 space-x-2">
    <div>
      <%= render_svg "#{Railsui.config.css_framework}", styles: "fill-current w-5 h-5 #{Railsui.tailwind? ? "text-teal-500" : "text-indigo-800"}" %>
    </div>

    <div class="flex items-center space-x-2">
      <h4 class="font-semibold text-sm dark:text-white"><%= Railsui.config.css_framework.humanize %></h4>
      <%= framework_version_label %>
    </div>
  </div>

  <% if Railsui.config.theme.present? %>
    <div class="ml-2 bg-green-50 uppercase tracking-wide text-green-600 font-bold rounded px-1 inline-flex items-center text-[10px]" data-controller="tooltip" data-tippy-content="Active theme">
      <%= render_svg "paw", styles: "w-4 h-4 fill-current" %>
      <%= Railsui.config.theme.humanize %>
    </div>
  <% end %>
</div>
