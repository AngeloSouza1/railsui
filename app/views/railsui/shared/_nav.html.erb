        <span class="tw-opacity-50">Design system</span>
      </div>
      <%= render_svg "question-mark", styles: "tw-w-5 tw-h-5 tw-stroke-current tw-absolute tw-right-2 tw-bottom-3 tw-text-gray-600" %>
    </div>
  <% end %>

