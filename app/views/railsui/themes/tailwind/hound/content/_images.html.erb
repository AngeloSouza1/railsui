<div class="my-6">
  <%= render "railsui/shared/sticky_subhead", title: "Images", subtitle: "Responsive images" %>

  <div class="prose dark:prose-invert mb-6">
    <p>Display images that scale proportionally relative to browser widths.</p>
  </div>

  <img src="https://source.unsplash.com/random/300×300/?dog" class="max-w-full h-[300px]">
</div>

<%# .html %>
<% content_for :html, flush: true do %>
  <img src="#" class="max-w-full h-[300px]">
<% end %>

<%# .erb %>
<% content_for :erb, flush: true do %>
  <%%= image_tag "...", class: "max-w-full h-[300px]", alt:"..." %>
<% end %>

<%# .haml %>
<% content_for :haml, flush: true do %>
  %img.max-w-full.h-[300px]{:alt => "...", :src => "..."}
<% end %>
<%= render_snippet %>

<div class="my-16">
  <%= render "railsui/shared/sticky_subhead", title: "Images - Object Fit", subtitle: "Object Cover" %>

<div class="prose dark:prose-invert mb-6 max-w-full">
  <p>Resize an element's content to cover it's container using <%= code_inline(".object-cover") %></p>
</div>

<div class="bg-salmon-500 flex items-center justify-center p-6 rounded-lg">
  <img src="https://source.unsplash.com/random/900×700/?fruit" alt="fruit" class="object-cover h-48 w-96 rounded-lg shadow-xl">
</div>


<%# .html %>
<% content_for :html, flush: true do %>
<div class="bg-indigo-500...">
  <img src="#" class="object-cover h-48 w-96">
</div>
<% end %>

<%# .erb %>
<% content_for :erb, flush: true do %>
<div class="bg-indigo-500...">
  <%%= image_tag "#", class: "object-cover h-48 w-96" %>
</div>
<% end %>

<%# .haml %>
<% content_for :haml, flush: true do %>
.bg-indigo-500
  image_tag "#", class: "object-cover h-48 w-96"
<% end %>
<%= render_snippet %>
</div>


