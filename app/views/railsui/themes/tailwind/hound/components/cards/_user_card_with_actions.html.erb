<%# Card - User card with actions %>
<div class="my-16" data-controller="anchor">
  <%= render "railsui/shared/sticky_subhead", title: "Cards", subtitle: "User card with actions" %>

  <div class="bg-slate-50 p-6 rounded shadow-inner">
   <div class="rounded-lg shadow-lg shadow-slate-300/70 bg-white py-4 px-6 flex flex-wrap items-center w-auto">
    <%= image_tag unsplash_url(item: "male portrait", width: 200, height: 200), class: "object-cover w-16 h-16 rounded-full flex-shrink-0" %>
      <div class="pl-3 flex-1 flex flex-col items-start space-y-px text-slate-700">
        <p class="font-bold">John Doe</p>
        <p class="text-sm">Software Architect at <a href="#" class="btn-link" data-action="click->anchor#prevent">Amazon</a></p>
      </div>
      <div class="grid gap-3 grid-cols-2 lg:pt-0 pt-3 w-full lg:w-auto">
        <a data-action="click->anchor#prevent" href="#" class="btn btn-white space-x-2 group">
          <%= icon "phone", styles: "w-5 h-5 text-slate-500 group-hover:text-indigo-600" %>
          <span>Phone</span>
        </a>
        <a data-action="click->anchor#prevent" href="#" class="btn btn-white space-x-2 group">
          <%= icon "envelope", styles: "w-5 h-5 text-slate-500 group-hover:text-indigo-600" %>
          <span>Email</span>
        </a>
      </div>
    </div>
  </div>

