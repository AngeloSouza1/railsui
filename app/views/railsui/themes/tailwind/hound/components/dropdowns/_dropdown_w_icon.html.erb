<div data-controller="dropdown" class="relative inline-block">
  <button type="button" data-action="click->dropdown#toggle click@window->dropdown#hide" class="btn <%= local_assigns[:class] %> pr-3">
    <%= local_assigns[:label] %>
    <%= icon "chevron-down", styles: "w-3 h-3 ml-2" %>
  </button>
  <ul
    class="hidden transition transform origin-to-right absolute -left-1 top-10 bg-white  rounded-lg shadow-xl shadow-slate-900/10 border border-slate-200 min-w-[180px] z-50 py-2 text-[15px]"
    data-dropdown-target="menu"
    data-transition-enter-from="opacity-0 scale-95"
    data-transition-enter-to="opacity-100 scale-100"
    data-transition-leave-from="opacity-100 scale-100"
    data-transition-leave-to="opacity-0 scale-95"
    >
    <li>
      <a href="#" class="px-4 py-[.4rem] hover:text-indigo-600 group flex items-center justify-start space-x-3">
        <%= icon "bookmark", styles: "w-4 h-4 text-slate-600 group-hover:text-indigo-600 flex-shrink-0" %>
        <span>Bookmark</span>
      </a>
    </li>
    <li>
      <a href="#" class="px-4 py-[.4rem] hover:text-indigo-600 group flex items-center justify-start space-x-3">
        <%= icon "flag", styles: "w-4 h-4 text-slate-600 group-hover:text-indigo-600 flex-shrink-0" %>
        <span>Report</span>
      </a>
    </li>
    <li>
      <a href="#" class="px-4 py-[.4rem] hover:text-indigo-600 group flex items-center justify-start space-x-3">
      <%= icon "arrow-down-tray", styles: "w-4 h-4 text-slate-600 group-hover:text-indigo-600 flex-shrink-0" %>
        <span>Export</span>
      </a>
    </li>
  </ul>
</div>
