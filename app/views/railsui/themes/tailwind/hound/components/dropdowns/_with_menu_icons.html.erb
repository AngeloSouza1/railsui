<div class="mb-16">
  <%= render "railsui/shared/sticky_subhead", title: "Dropdowns", subtitle: "With menu icons" %>

<div class="flex flex-wrap items-center justify-start space-x-3">
<%= render "railsui/themes/tailwind/hound/components/dropdowns/dropdown_w_icon", label: "Dropdown", class: "btn-primary" %>

<%= render "railsui/themes/tailwind/hound/components/dropdowns/dropdown_w_icon", label: "Dropdown", class: "btn-dark" %>

<%= render "railsui/themes/tailwind/hound/components/dropdowns/dropdown_w_icon", label: "Dropdown", class: "btn-light" %>

