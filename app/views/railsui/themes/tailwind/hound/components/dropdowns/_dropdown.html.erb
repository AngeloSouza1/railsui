<div data-controller="dropdown" class="relative">
  <button type="button" data-action="dropdown#toggle click@window->dropdown#hide" class="btn <%= local_assigns[:class] %> pr-3">
    <%= local_assigns[:label] %>
    <%= icon "chevron-down", styles: "w-3 h-3 ml-2" %>
  </button>
  <ul
    class="hidden transition transform origin-to-right absolute -left-1 top-10 bg-white p-3 rounded-lg shadow-xl shadow-slate-300/25 border border-slate-200 min-w-[180px] z-50 text-[15px]"
    data-dropdown-target="menu"
    data-transition-enter-from="opacity-0 scale-95"
    data-transition-enter-to="opacity-100 scale-100"
    data-transition-leave-from="opacity-100 scale-100"
    data-transition-leave-to="opacity-0 scale-95"
    >
    <li>
      <a href="#" class="px-2 py-[.4rem] hover:text-indigo-600 block">Bookmark</a>
    </li>
    <li>
      <a href="#" class="px-2 py-[.4rem] hover:text-indigo-600 block">Report</a>
    </li>
    <li>
      <a href="#" class="px-2 py-[.4rem] hover:text-indigo-600 block">Export</a>
    </li>
  </ul>
</div>
