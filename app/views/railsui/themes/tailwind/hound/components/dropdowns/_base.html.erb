<div class="mb-16">
  <%= render "railsui/shared/sticky_subhead", title: "Dropdowns", subtitle: "Base" %>

<%= render preview do %>
<div class="flex flex-wrap items-center justify-start space-x-3">
<%= render "railsui/themes/tailwind/hound/components/dropdowns/dropdown", label: "Dropdown", class: "btn-primary" %>

<%= render "railsui/themes/tailwind/hound/components/dropdowns/dropdown", label: "Dropdown", class: "btn-dark" %>

<%= render "railsui/themes/tailwind/hound/components/dropdowns/dropdown", label: "Dropdown", class: "btn-light" %>

<%= render "railsui/themes/tailwind/hound/components/dropdowns/dropdown", label: "Dropdown", class: "btn-white" %>
</div>
<% end %>

<% content_for :html, flush: true do %>
<div data-controller="dropdown" class="relative inline-block">
  <button type="button" data-action="click->dropdown#toggle click@window->dropdown#hide" class="btn btn-primary pr-3">
    Dropdown
    <%%= icon "chevron-down", styles: "w-3 h-3 ml-2" %>
  </button>
  <div
    class="hidden transition transform origin-to-right absolute -left-1 top-10 bg-white rounded-lg shadow-xl shadow-slate-900/10 border border-slate-200 min-w-[180px] z-50 py-2 text-[15px]"
    data-dropdown-target="menu"
    data-transition-enter-from="opacity-0 scale-95"
    data-transition-enter-to="opacity-100 scale-100"
    data-transition-leave-from="opacity-100 scale-100"
    data-transition-leave-to="opacity-0 scale-95"
    >
    <a href="#" class="px-4 py-[.4rem] hover:text-indigo-600 block">Bookmark</a>
    <a href="#" class="px-4 py-[.4rem] hover:text-indigo-600 block">Report</a>
    <a href="#" class="px-4 py-[.4rem] hover:text-indigo-600 block">Export</a>
  </div>
</div>
<% end %>

<% content_for :erb, flush: true do %>
<div data-controller="dropdown" class="relative inline-block">
  <%%= button_tag data: { action: "click->dropdown#toggle click@window->dropdown#hide" }, class: "btn btn-primary" do %>
    Dropdown
    <%%= icon "chevron-down", styles: "w-3 h-3 ml-2" %>
  <%% end %>
  <div
    class="hidden transition transform origin-to-right absolute -left-1 top-10 bg-white py-2 rounded-lg shadow-xl shadow-slate-900/10 border border-slate-200 min-w-[180px] z-50 text-[15px]"
    data-dropdown-target="menu"
    data-transition-enter-from="opacity-0 scale-95"
    data-transition-enter-to="opacity-100 scale-100"
    data-transition-leave-from="opacity-100 scale-100"
    data-transition-leave-to="opacity-0 scale-95"
    >
    <%%= link_to "Bookmark", "#", class: "px-4 py-[.4rem] hover:text-indigo-600 block" %>
    <%%= link_to "Report", "#", class: "px-4 py-[.4rem] hover:text-indigo-600 block" %>
    <%%= link_to "Export", "#", class: "px-4 py-[.4rem] hover:text-indigo-600 block" %>
  </div>
</div>
<% end %>

