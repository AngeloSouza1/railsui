    Dropdown
    = icon "chevron-down", styles: "w-3 h-3 ml-2"
  .hidden.transition.transform.origin-to-right.absolute.-left-1.top-10.bg-white.rounded-lg.shadow-xl.border.border-slate-200.z-50.py-2.shadow-slate-900/10.min-w-[180px].text-[15px], {"data-dropdown-target" => "menu", "data-transition-enter-from" => "opacity-0 scale-95", "data-transition-enter-to" => "opacity-100 scale-100", "data-transition-leave-from" => "opacity-100 scale-100", "data-transition-leave-to" => "opacity-0 scale-95"}
    %a.px-4.hover:text-indigo-600.block.py-[.4rem]{href: "#"} Bookmark
    %a.px-4.hover:text-indigo-600.block.py-[.4rem]{href: "#"} Report
