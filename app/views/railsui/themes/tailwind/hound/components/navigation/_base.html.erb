<div class="mb-24 mt-6 pb-24">

<%= render "railsui/shared/sticky_subhead", title: "Navigation", subtitle: "Base" %>

<%= render "railsui/themes/tailwind/hound/components/navigation/nav_preview" do %>
<header class="relative bg-white rounded-t" data-controller="nav">
  <div class="container mx-auto px-4">
    <div class="sm:flex items-center flex-wrap sm:space-x-2">
      <div class="sm:block flex items-center justify-between">
        <a href="/" class="w-14 h-14 flex justify-center">
          <!-- Hound logo -->
          <svg
            class="fill-current w-6 h-auto text-indigo-600 hover:text-indigo-700 duration-300 transition ease-in-out"
            width="39" height="50" viewBox="0 0 39 50" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" clip-rule="evenodd"
              d="M8.55264 0C3.82915 0 0 3.82915 0 8.55265V26.1842C0 30.9077 3.82915 34.7368 8.55264 34.7368C13.2761 34.7368 17.1053 30.9077 17.1053 26.1842V8.55264C17.1053 3.82915 13.2761 0 8.55264 0ZM29.6053 0C24.8818 0 21.0527 3.82915 21.0527 8.55264V41.4474C21.0527 46.1709 24.8818 50 29.6053 50C34.3288 50 38.1579 46.1708 38.1579 41.4474V8.55264C38.1579 3.82915 34.3288 0 29.6053 0Z" />
          </svg>
          <span class="sr-only"><%= Railsui.config.theme.humanize %></span>
        </a>

        <button
          id="base-nav-toggle"
          data-action="click->nav#toggle"
          class="sm:hidden block p-1 rounded focus:ring-4 focus:ring-slate-100 active:bg-white group focus:bg-white focus:bg-opacity-50"
          role="Mobile navigation toggle">
          <div role="none" data-nav-target="menuBars">
            <%= icon "bars-3-center-left", styles: "w-8 h-8 text-slate-600 group-focus:text-indigo-600" %>
          </div>
          <div role="none" data-nav-target="menuCross" class="hidden">
            <%= icon "x-mark", styles: "w-8 h-8 text-slate-600 group-focus:text-indigo-600" %>
          </div>
        </button>

      </div>
      <div
        id="base-navigation"
        class="sm:flex-1 sm:block hidden sm:static absolute top-[57px] left-0 w-full bg-white sm:bg-transparent transform origin-top sm:p-0 p-4 rounded-b sm:shadow-none shadow-xl z-50"
        data-nav-target="nav"
        data-transition-enter-active="transition ease-out duration-200"
        data-transition-enter-from="opacity-0 scale-95"
        data-transition-enter-to="opacity-100 scale-100"
        data-transition-leave-from="opacity-100 scale-100"
        data-transition-leave-active="transition ease-in duration-200"
        data-transition-leave-to="opacity-0 scale-95"
      >
        <div
          class="sm:flex-1 sm:flex flex-wrap items-center justify-between lg:text-left text-center">
          <nav role="Primary navigation">
            <ul
              class="sm:flex block items-center flex-wrap space-x-0 sm:space-x-3 sm:text-base text-lg sm:leading-normal leading-relaxed space-y-1 sm:space-y-0 sm:mb-0 mb-4">
              <li>
                <a href="#" class="nav-link">Product</a>
              </li>
              <li>
                <a href="#" class="nav-link">Pricing</a>
              </li>
              <li>
                <a href="#" class="nav-link nav-link-active">Company</a>
              </li>
            </ul>
          </nav>

          <nav role="Secondary navigation">
            <ul class="sm:flex flex-wrap items-center justify-center grid grid-cols-2 sm:gap-0 gap-4 sm:mt-0 mt-6">
              <li class="sm:pr-5">
                <a href="#" class="group sm:border-none border rounded sm:bg-transparent bg-white flex justify-center items-center sm:py-0 py-2 sm:px-0 px-3 sm:block sm:focus:ring-none focus:ring-4 focus:ring-slate-100">
                  <%= icon "question-mark-circle", styles: "fill-current w-5 h-5 text-indigo-600 group-hover:text-indigo-700 transition ease-in-out duration-300", variant: :solid %>
                </a>
              </li>
              <li class="sm:pr-3">
                <a href="#" class="group sm:border-none border rounded sm:bg-transparent bg-white flex justify-center items-center sm:py-0 py-2 sm:px-0 px-3 sm:block sm:focus:ring-none focus:ring-4 focus:ring-slate-100">
                  <%= icon "book-open", styles: "fill-current w-5 h-5
                  text-indigo-600 group-hover:text-indigo-700 transition ease-in-out duration-300", variant: :solid %>
                </a>
              </li>
              <li class="sm:block hidden sm:px-2">
                <span class="h-6 w-px bg-slate-200 block"></span>
              </li>
              <li class="w-full sm:w-auto sm:mb-0 col-span-2 border sm:border-0">
                <a href="#" class="btn btn-transparent sm:w-auto w-full">Sign in</a>
              </li>
              <li class="sm:pl-3 w-full sm:w-auto col-span-2">
                <a href="#" class="btn btn-dark sm:w-auto w-full">Sign up</a>
              </li>
            </ul>
          </nav>
        </div>
      </div>
    </div>
  </div>
</header>
<% end %>
</div>
