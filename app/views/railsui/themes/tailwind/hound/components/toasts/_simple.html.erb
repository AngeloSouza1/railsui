<div class="mb-16 mt-6">
  <%= render "railsui/shared/sticky_subhead", title: "Toasts", subtitle: "Simple" %>
<div class="relative bg-slate-100 border-slate-200 border rounded-lg p-10 w-full min-h-[280px]">
  <div aria-live="assertive" class="pointer-events-none absolute flex items-center justify-end px-4 py-6 sm:p-6 top-0 right-0 left-0 w-full">
      <div class="pointer-events-auto w-full max-w-sm overflow-hidden rounded-lg bg-white shadow-lg ring-1 ring-black ring-opacity-5">
        <div class="p-4">
          <div class="flex items-start">
            <div class="flex-shrink-0">
              <%= icon "hand-thumb-up", classes: "w-6 h-6 text-blue-500" %>
            </div>
            <div class="ml-3 w-0 flex-1 pt-0.5">
              <p class="text-sm font-medium text-gray-900">Successfully liked!</p>
              <p class="mt-1 text-sm text-gray-500">John Doe has been notified.</p>
            </div>
            <div class="ml-4 flex flex-shrink-0">
              <button type="button" class="inline-flex rounded-sm bg-white text-gray-400 hover:text-slate-500 focus:outline-none focus:ring-4 focus:ring-indigo-50 focus:ring-offset-2">
                <span class="sr-only">Close</span>
                <%= icon "x-mark", classes: "w-5 h-5" %>
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<% content_for :html, flush: true  do %>
<div aria-live="assertive" class="pointer-events-none fixed inset-0 flex items-start px-4 py-6 sm:items-start sm:p-6">
  <div class="flex w-full flex-col items-end space-y-4 sm:items-end">
    <div class="pointer-events-auto w-full max-w-sm overflow-hidden rounded-lg bg-white shadow-lg ring-1 ring-black ring-opacity-5">
