<%#### input w/ icon %>
<div class="tw-my-6">
  <%= render "railsui/shared/sticky_subhead", title: "Forms", subtitle: "Input group w/ icon" %>

  <div class="rui-bs">
    <div class="input-group mb-3">
      <span class="input-group-text" id="envelope">
        <%= icon("envelope") %>
      </span>
      <input type="email" class="form-control" placeholder="john.doe@example.com" aria-label="Email" aria-describedby="envelope">
    </div>
  </div>

<div class="tw-text-lg tw-text-slate-700">
  <p class="tw-mb-3">Read the <%= link_to "Rails UI documentation", docs_path, class: "rui-link", target: :_blank %> for the <code class="tw-font-mono tw-text-rose-600 tw-text-sm">icon</code> view helper as shown in the following snippet(s).</p>
</div>

<%# .html %>
<% content_for :html, flush: true do %>
<div class="input-group mb-3">
  <span class="input-group-text" id="envelope">
    <%%= icon("envelope") %>
  </span>
  <input type="email" class="form-control" placeholder="john.doe@example.com" aria-label="Email" aria-describedby="envelope">
</div>
<% end %>

<%# .erb %>
<% content_for :erb, flush: true do %>
 <!-- ActionView::Helpers::FormTagHelper -->
<%%= tag.div class: "input-group mb-3" do %>
  <%%= tag.span class: "input-group-text", id: "envelope" do %>
    <%%= icon("envelope") %>
  <%% end %>
  <%%= email_field_tag "envelope", nil, class: "form-control", "aria-describedby": "envelope", "aria-label": "Email", placeholder: "john.doe@example.com" %>
<%% end %>

<!-- ActionView::Helpers::FormHelper -->
<%%= form_with model: @form do |f| %>
  <%%= tag.div class: "input-group mb-3" do %>
    <%%= tag.span class: "input-group-text", id: "envelope" do %>
      <%%= icon("envelope") %>
    <%% end %>
    <%%= f.email_field :input_1, placeholder: "The quick brown fox jumps over the lazy dog.", class: "form-label" %>
  <%% end %>
  <%%= f.submit class: "btn btn-primary" %>
<%% end %>
<% end %>

<%# .haml %>
<% content_for :haml, flush: true do %>
/ ActionView::Helpers::FormTagHelper
.input-group.mb-3
  span.input-group-text#envelope
   = icon "envelope"
   = email_field_tag "envelope", nil, class: "form-control", "aria-label": "Email", placeholder: "john.doe@example.com"


/ ActionView::Helpers::FormHelper
= form_with model: @form do |f|
  .input-group.mb-3
    span.input-group-text#envelope
    = icon "envelope"
    = f.email_field :my_input, class: "form-control", "aria-label": "Email", placeholder: "john.doe@example.com"
  = f.submit class: "btn btn-primary"
<% end %>
<%= render_snippet %>
</div>

<div class="tw-mt-16">
  <div class="tw-bg-gray-100 tw-px-6 tw-py-10 tw-rounded-xl tw-flex tw-flex-wrap tw-items-center tw-justify-center tw-mx-auto tw-text-slate-500">
  <%= render_svg "book", styles: "tw-stroke-current tw-w-6 tw-h-6 tw-text-slate-400 tw-mr-2" %>
  <p>Refer to the <%= link_to "official Boostrap documentation", "https://getbootstrap.com/docs/5.2/forms/input-group/", target: :_blank, class: "rui-link" %> for more input group usage.</p>
  </div>
</div>
