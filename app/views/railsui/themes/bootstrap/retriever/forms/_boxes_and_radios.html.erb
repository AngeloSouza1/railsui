<div class="tw-mb-16 tw-mt-6">
  <%= render "railsui/shared/sticky_subhead", title: "Forms", subtitle: "Checkboxes" %>

  <div class="rui-bs">
    <div class="form-check">
      <input class="form-check-input" type="checkbox" value="" id="check_default">
      <label class="form-check-label" for="check_default">
        Default checkbox
      </label>
    </div>

  </div>
<%# .html %>
<% content_for :html, flush: true do %>
<div class="form-check">
  <input class="form-check-input" type="checkbox" value="" id="check_default">
  <label class="form-check-label" for="check_default">
    Default checkbox
  </label>
</div>
<% end %>

<%# .erb %>
<% content_for :erb, flush: true do %>
 <!-- ActionView::Helpers::FormTagHelper -->
<%%= tag.div class: "form-check" do %>
  <%%= check_box_tag :check_default, nil, false, class: "form-check-input" %>
  <%%= label_tag :check_default, "Default checkbox", class: "form-check-label" %>
<%% end %>


<!-- ActionView::Helpers::FormHelper -->
<%%= form_with model: @form do |f| %>
  <%% tag.div class: "form-check" do %>
    <%%= f.check_box :check_default, class: "form-check-input" %>
    <%%= f.label :check_default, "Default checkbox", class: "form-check-label" %>
  <%% end %>
  <%%= f.submit class: "btn btn-primary" %>
<%% end %>
<% end %>

<%# .haml %>
<% content_for :haml, flush: true do %>
/ ActionView::Helpers::FormHelper
= form_with model: @form do |f|
  .form-check
    = f.check_box :check_default, class: "form-check-input"
    = f.label :check_default, "Default checkbox", class: "form-label"
  = f.submit class: "btn btn-primary"
<% end %>
<%= render_snippet %>
</div>


