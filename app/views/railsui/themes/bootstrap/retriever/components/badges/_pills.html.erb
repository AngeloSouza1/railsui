<span class="badge text-bg-light rounded-6">Light</span>
<% end %>

<% content_for :erb, flush: true do %>
<%%= content_tag :span, "Primary", class: "badge text-bg-primary rounded-pill" %>
<%%= content_tag :span, "Secondary", class: "badge text-bg-secondary rounded-pill" %>
<%%= content_tag :span, "Success", class: "badge text-bg-success rounded-pill" %>
<%%= content_tag :span, "Danger", class: "badge text-bg-danger rounded-pill" %>
