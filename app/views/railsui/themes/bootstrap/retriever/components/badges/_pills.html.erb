<div class="mb-16 mt-6">

  <%= render "railsui/shared/sticky_subhead", title: "Badges", subtitle: "Pills" %>

<div class="rui dark:p-6 dark:rounded-lg">
<span class="badge text-bg-primary rounded-pill">Primary</span>
<span class="badge text-bg-secondary rounded-pill">Secondary</span>
