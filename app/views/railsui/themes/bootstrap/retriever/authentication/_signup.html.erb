<div class="border-b">
  <div class="rui full">
    <div class="row g-0 vh-100 align-items-center">
      <div class="col-lg-5 col-md-12 vh-100 d-flex align-items-center px-3 px-lg-6">
        <div class="rui-auth-form-wrap pointer-events-none select-none">
          <a href="/">
            <%= image_tag Railsui.theme_logo_url, alt: "#{Railsui.config.theme.humanize} logo" %>
          </a>
          <h1 class="display-5 mb-4 mt-6">Sign up</h1>

          <p class="mb-4">Or <a href="#">Sign in</a> to your account.</p>

      <form class="new_user" id="new_user" action="#" accept-charset="UTF-8" method="post">
        <input type="hidden" name="authenticity_token" value="#" autocomplete="off">

        <div class="mb-4">
          <label class="form-label" for="user_email">Email</label>
          <input autofocus="autofocus" autocomplete="email" class="form-control" type="email" value="" name="user[email]" id="user_email">
        </div>

        <div class="mb-4">
          <label class="form-label" for="user_password">Password</label>
          <input class="form-control" type="password" name="user[password]" id="user_password">
          <div class="form-text">(6 characters minimum)</div>
        </div>

        <div class="mb-4">
          <label class="form-label" for="user_password_confirmation">Password confirmation</label>
          <input class="form-control" type="password" name="user[password_confirmation]" id="user_password_confirmation">
        </div>

        <div class="d-grid">
          <input type="submit" name="commit" value="Sign up" class="btn btn-primary btn-lg">
        </div>
        </form>

          <div class="mt-4">
            <p class="mb-3">
              <a class="text-muted text-decoration-underline" href="#">Didn't receive confirmation instructions?</a>
            </p>
          </div>
        </div>
      </div>
      <div class="rui-auth-feature-bg col-md-7 vh-100 d-flex align-items-center justify-content-center">
        <%= image_tag "sample-tweet.svg", alt: "A sample tweet to use for a testimonial", class: "img-fluid" %>
      </div>
    </div>
  </div>
</div>

<div class="max-w-4xl mx-auto my-16">
<% content_for :erb, flush: true do %>
