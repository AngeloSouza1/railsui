<div class="rui tw-border-b">
  <div class="row g-0 vh-100 align-items-center">
    <div class="col-lg-5 col-md-12 vh-100 d-flex align-items-center px-3 px-lg-6">
      <div class="rui-auth-form-wrap">
        <a href="/">
          <%= image_tag Railsui.theme_logo_url, alt: "#{Railsui.config.theme.humanize} logo" %>
        </a>

        <h1 class="display-6 mb-4 mt-6">Resend unlock instructions</h1>

        <form class="new_user" id="new_user" data-turbo="false" action="#" accept-charset="UTF-8" method="post">

        <input type="hidden" name="authenticity_token" value="#" autocomplete="off">

          <div class="mb-4">
            <label class="form-label" for="user_email">Email</label>
            <input autofocus="autofocus" autocomplete="email" class="form-control" type="email" value="" name="user[email]" id="user_email">
          </div>

          <div class="d-grid">
            <input type="submit" name="commit" value="Resend unlock instructions" class="btn btn-primary btn-lg tw-pointer-events-none">
          </div>
        </form>

        <div class="mt-4">
          <p class="mb-3">
            <a class="text-muted text-decoration-underline" href="/users/password/new">Forgot password?</a>
          </p>

        </div>
      </div>
    </div>
    <div class="rui-auth-feature-bg col-md-7 vh-100 d-flex align-items-center justify-content-center">
      <%= image_tag "sample-tweet.svg", alt: "A sample tweet to use for a testimonial", class: "img-fluid" %>
    </div>
  </div>
</div>

<div class="tw-max-w-4xl tw-mx-auto tw-my-16">
<% content_for :erb, flush: true do %>
<%%= render "auth_layout" do %>
  <%% content_for :featured_block do %>
    <%%= image_tag "sample-tweet.svg", alt: "A sample tweet to use for a testimonial", class: "img-fluid" %>
  <%% end %>

  <h1 class="display-6 mb-4 mt-6">Resend unlock instructions</h1>

  <%%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post, data: { turbo: false } }) do |f| %>
    <%%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-4">
      <%%= f.label :email, class: "form-label" %>
      <%%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="d-grid">
      <%%= f.submit "Resend unlock instructions", class: "btn btn-primary btn-lg" %>
    </div>
  <%% end %>
<%% end %>
<% end %>

<% content_for :haml, flush: true do %>
= render "auth_layout" do
  - content_for :featured_block do
    = image_tag "sample-tweet.svg", alt: "A sample tweet to use for a testimonial", class: "img-fluid"
  %h1.display-6.mb-4.mt-6 Resend unlock instructions
  = form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post, data: { turbo: false } }) do |f|
    = render "devise/shared/error_messages", resource: resource
    .mb-4
      = f.label :email, class: "form-label"
      = f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control"
    %div.d-grid
      = f.submit "Resend unlock instructions", class: "btn btn-primary btn-lg"
<% end %>
<%= render_snippet active_tab: :erb %>
</div>
