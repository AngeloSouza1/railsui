<% content_for :head do %>
  <%= stylesheet_link_tag "railsui/application" %>
  <%= javascript_include_tag "railsui" %>

  <%# Dumb hack to avoid CSS collision %>
  <script>
    document.addEventListener("DOMContentLoaded", () => {
      document.body.classList.remove('rui');
    })
  </script>
<% end %>

<div class="flex flex-col justify-center items-center h-full p-4 antialiased">
  <div class="max-w-6xl sm:text-left text-center mx-auto rounded-3xl relative z-20 sm:p-16 p-6 bg-white">
    <div class="flex flex-wrap justify-between items-end">
      <div class="flex items-end sm:justify-start justify-center flex-1">
        <%= render_svg "rails-logo", styles: "fill-current text-rails-500 w-36 h-auto" %>

        <div class="bg-rails-500/10 inline-flex rounded-full px-3 py-px text-rails-500 font-semibold ml-2 text-sm">
          v<%= Rails.gem_version %>
        </div>
      </div>
      <div class="sm:block hidden">
        <%= link_to "Read The Rails Doctrine.", "https://rubyonrails.org/doctrine", target: :_blank, class: "font-medium text-rails-500 block" %>
      </div>
    </div>

    <div class="my-16 max-w-3xl">
      <h3 class="font-extrabold text-5xl text-slate-800 tracking-tight">All the tools for full-stack bliss.</h3>
      <p class="mt-6 text-2xl text-slate-600">Optimized for developer happiness, Ruby on Rails compresses the complexity of modern web app development.</p>
      <p class="mt-6 text-slate-700 leading-relaxed text-lg max-w-xl">Rails has united and cultivated a strong tribe around a wide set of heretical thoughts about the nature of programming and programmers.</p>
    </div>

    <p class="font-bold uppercase tracking-wide text-xs text-rails-500 mb-4">Take action</p>
    <div class="grid grid-cols-1 sm:grid-cols-3 sm:gap-10 gap-0 text-lg text-slate-600 -mx-2">
      <ul class="leading-loose space-y-2 sm:mb-0 mb-2">
        <li>
          <%= link_to "https://guides.rubyonrails.org/", target: :_blank, class: "flex items-center justify-start w-full hover:bg-slate-50 rounded px-2 py-2 group transition ease-in-out duration-300 sm:border-none border" do %>
            <div class="flex-1 flex items-center space-x-2">
              <div class="w-10 h-10 rounded-full flex items-center justify-center bg-slate-50">
                <%= render_svg "clipboard", styles: "stroke-current w-6 h-6 group-hover:text-rails-500" %>
              </div>
              <span>Rails Guides</span>
            </div>
            <%= render_svg "chevron-right", styles: "stroke-current w-6 h-6 sm:opacity-0 opacity-100 sm:hover:translate-none  group-hover:opacity-100 text-rails-500 translate-x-0 group-hover:translate-x-1 transition ease-in-out duration-200" %>
          <% end %>
        </li>

        <li>
          <%= link_to "https://api.rubyonrails.org/", target: :_blank, class: "flex items-center justify-start w-full hover:bg-slate-50 rounded px-2 py-2 group transition ease-in-out duration-300 sm:border-none border" do %>
            <div class="flex-1 flex items-center space-x-2">
              <div class="w-10 h-10 rounded-full flex items-center justify-center bg-slate-50">
                <%= render_svg "code", styles: "stroke-current w-6 h-6 group-hover:text-rails-500" %>
              </div>
              <span>Rails API</span>
            </div>
            <%= render_svg "chevron-right", styles: "stroke-current w-6 h-6 sm:opacity-0 opacity-100 group-hover:opacity-100 text-rails-500 translate-x-0 group-hover:translate-x-1 transition ease-in-out duration-200" %>
          <% end %>
        </li>
        <li>
          <%= link_to "https://discuss.rubyonrails.org/", target: :_blank, class: "flex items-center justify-start w-full hover:bg-slate-50 rounded px-2 py-2 group transition ease-in-out duration-300 sm:border-none border" do %>
            <div class="flex-1 flex items-center space-x-2">
              <div class="w-10 h-10 rounded-full flex items-center justify-center bg-slate-50">
                <%= render_svg "message", styles: "stroke-current w-6 h-6 group-hover:text-rails-500" %>
              </div>
              <span>Forum</span>
            </div>
            <%= render_svg "chevron-right", styles: "stroke-current w-6 h-6 sm:opacity-0 opacity-100 group-hover:opacity-100 text-rails-500 translate-x-0 group-hover:translate-x-1 transition ease-in-out duration-200" %>
          <% end %>
        </li>
      </ul>
      <ul class="leading-loose space-y-2">
        <li>
          <%= link_to "https://rubyonrails.org/blog/", target: :_blank, class: "flex items-center justify-start w-full hover:bg-slate-50 rounded px-2 py-2 group transition ease-in-out duration-300 sm:border-none border" do %>
            <div class="flex-1 flex items-center space-x-2">
              <div class="w-10 h-10 rounded-full flex items-center justify-center bg-slate-50">
                <%= render_svg "open-book", styles: "stroke-current w-6 h-6 group-hover:text-rails-500" %>
              </div>
              <span>Blog</span>
            </div>
            <%= render_svg "chevron-right", styles: "stroke-current w-6 h-6 sm:opacity-0 opacity-100 group-hover:opacity-100 text-rails-500 translate-x-0 group-hover:translate-x-1 transition ease-in-out duration-200" %>
          <% end %>
        </li>
        <li>
          <%= link_to "https://github.com/rails/rails", target: :_blank, class: "flex items-center justify-start w-full hover:bg-slate-50 rounded px-2 py-2 group transition ease-in-out duration-300 sm:border-none border" do %>
            <div class="flex-1 flex items-center space-x-2">
              <div class="w-10 h-10 rounded-full flex items-center justify-center bg-slate-50">
                <%= render_svg "github", styles: "fill-current text-slate-500 w-5 h-5 group-hover:text-rails-500" %>
              </div>
              <span>Contribute</span>
            </div>
            <%= render_svg "chevron-right", styles: "stroke-current w-6 h-6 sm:opacity-0 opacity-100 group-hover:opacity-100 text-rails-500 translate-x-0 group-hover:translate-x-1 transition ease-in-out duration-200" %>
          <% end %>
        </li>
        <li>
          <%= link_to "https://rubyonrails.org/category/releases", target: :_blank, class: "flex items-center justify-start w-full hover:bg-slate-50 rounded px-2 py-2 group transition ease-in-out duration-300 sm:border-none border" do %>
            <div class="flex-1 flex items-center space-x-2">
              <div class="w-10 h-10 rounded-full flex items-center justify-center bg-slate-50">
                <%= render_svg "hashtag", styles: "stroke-current w-5 h-5 group-hover:text-rails-500" %>
              </div>
              <span>Releases</span>
            </div>
            <%= render_svg "chevron-right", styles: "stroke-current w-6 h-6 sm:opacity-0 opacity-100 group-hover:opacity-100 text-rails-500 translate-x-0 group-hover:translate-x-1 transition ease-in-out duration-200" %>
          <% end %>
        </li>
      </ul>
      <ul class="leading-loose space-y-2">
        <li>
          <%= link_to "/rails/mailers", target: :_blank, class: "flex items-center justify-start w-full hover:bg-slate-50 rounded px-2 py-2 group transition ease-in-out duration-300 sm:border-none border" do %>
            <div class="flex-1 flex items-center space-x-2">
              <div class="w-10 h-10 rounded-full flex items-center justify-center bg-slate-50">
                <%= render_svg "mail", styles: "stroke-current w-5 h-5 group-hover:text-rails-500" %>
              </div>
              <span>Mailers</span>
            </div>
            <%= render_svg "chevron-right", styles: "stroke-current w-6 h-6 sm:opacity-0 opacity-100 group-hover:opacity-100 text-rails-500 translate-x-0 group-hover:translate-x-1 transition ease-in-out duration-200" %>
          <% end %>
        </li>
        <li>
          <%= link_to railsui.routes_path,class: "flex items-center justify-start w-full hover:bg-slate-50 rounded px-2 py-2 group transition ease-in-out duration-300 sm:border-none border" do %>
            <div class="flex-1 flex items-center space-x-2">
              <div class="w-10 h-10 rounded-full flex items-center justify-center bg-slate-50">
                <%= render_svg "icons/outline/square-3-stack-3d", styles: "stroke-current w-4 h-4 group-hover:text-rails-500" %>
              </div>
              <span>Routes</span>
            </div>
            <%= render_svg "chevron-right", styles: "stroke-current w-6 h-6 sm:opacity-0 opacity-100 group-hover:opacity-100 text-rails-500 translate-x-0 group-hover:translate-x-1 transition ease-in-out duration-200" %>
          <% end %>
        </li>
      </ul>
    </div>

    <div class="mt-24">
      <div class="bg-gradient-to-r from-white to-slate-50 relative p-6 -m-6 rounded-xl">
        <div class="grid sm:block grid-cols-3 mb-6 sm:mb-0 gap-3 sm:gap-0">
          <%= image_tag "tailwind-shepherd-thumbnail.jpg", class: "sm:absolute -right-6 -top-6 sm:max-w-[200px] h-auto rounded-xl sm:shadow-xl z-0 hover:z-20 transition ease-in-out duration-200", alt: "Rails UI Shepherd Theme" %>
          <%= image_tag "tailwind-hound-thumbnail.jpg", class: "sm:absolute right-0 top-0 sm:max-w-[200px] h-auto rounded-xl sm:shadow-xl z-10 transition ease-in-out duration-200 hover:z-20", alt: "Rails UI Hound Theme" %>
          <%= image_tag "bootstrap-retriever-thumbnail.jpg", class: "sm:absolute right-6 top-6 sm:max-w-[200px] h-auto rounded-xl sm:shadow-xl z-10 transition ease-in-out duration-200", alt: "Rails UI Hound Theme" %>
        </div>

        <div class="relative z-50">
          <%= link_to root_path, class:"text-xl tracking-tight font-black group transform text-black hover:text-black inline-flex justify-center sm:justify-start" do %>
            <h1 class="sr-only">RailsUI</h1>
            <%= render_svg "animated-logo", styles: "text-black fill-current w-48 h-auto" %>
          <% end %>

          <div class="max-w-xl">
            <p class="sm:text-2xl text-xl mt-6 text-slate-700 mb-4">UI components and templates for Ruby on Rails.</p>

            <p class="text-lg max-w-lg leading-relaxed text-slate-700 mb-6">Save time creating views, scaffolds, components, and making tough design decisions with the help of Rails UI.</p>
          </div>

          <div class="flex flex-wrap justify-between items-center sm:space-x-4 space-y-4 sm:space-y-0 sm:mt-0 mt-6">
            <%= link_to railsui.docs_path, class: "bg-white py-2 px-4 text-center flex items-center text-slate-800 border border-slate-800 shadow hover:shadow-none group rounded-full sm:h-[50px] sm:w-auto w-full justify-center" do %>
              <%= render_svg "open-book", styles: "stroke-current w-6 h-6 mr-2 group-hover:text-rails-500" %>
              <span class="font-medium">Read the docs</span>
            <% end %>

            <%= link_to railsui.root_path, class: "py-2 pl-4 pr-3 text-center flex items-center rounded-full text-gray-800 border border-black shadow hover:shadow-none group bg-rails-500 text-white rounded-full sm:h-[50px] sm:w-auto w-full justify-center" do %>
              <%= render_svg "cog", styles: "stroke-current w-6 h-6 mr-2 font-medium text-white opacity-90 group-hover:opacity-100" %>
              <span class="text-white font-medium">Configure your app</span>
              <%= render_svg "chevron-right", styles: "stroke-current w-auto h-7 opacity-80 group-hover:opacity-100 transform group-hover:translate-x-1 transition ease-linear duration-200 relative text-white top-px" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="absolute bottom-3 left-3 z-50 text-xs font-mono text-white text-opacity-50">
    Made by <%= link_to "@justalever", "https://twitter.com/justalever", target: :_blank, class: "text-white underline" %>. Follow <%= link_to "Rails UI", "https://twitter.com/railsui_", target: :_blank, class: "text-white underline" %> on Twitter.
  </div>
