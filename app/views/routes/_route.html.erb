<div class="grid grid-cols-11 text-sm items-start py-4 <%= "sm:pl-10 bg-gradient-to-r from-slate-50/80 to-white dark:from-slate-800/50 dark:to-transparent" unless route[:name].present? %>" data-search-target="result" data-search-route-value="<%= route[:name] %>">
  <div data-route-name='<%= route[:name] %>' class="sm:col-span-4 text-base">
    <% if route[:name].present? %>
      <div class="relative group">
        <button type="button"
        data-controller="clipboard"
        data-action="click->clipboard#copy">
          <div class="absolute -left-8 top-0 opacity-0 group-hover:opacity-100 p-1 rounded-full group-hover:bg-indigo-50/50 dark:group-hover:bg-slate-700 transition ease-in-out duration-200 w-6 h-6 flex items-center justify-center">
            <%= render_svg "copy", styles: "w-3 h-3 fill-current text-indigo-400 dark:text-slate-100" %>
          </div>
          <div
            data-clipboard-target="source"
            class="group-hover:text-indigo-600 dark:group-hover:text-indigo-400 font-medium">
            <%= route[:name] %><span data-helper-target="extension">_path</span>
          </div>
        </button>
      </div>
    <% end %>
    <% if route[:verb].present? %>
    <div class="mt-3 inline-flex items-center font-bold px-1 h-5 rounded text-xs -ml-1 <%= route_verb_classes(route[:verb]) %>"><%= route[:verb] %></div>
    <% end %>
  </div>
  <div class="sm:col-span-7">
  <div data-controller="code" class="mt-5 mb-8 first:mt-0 last:mb-0 bg-gradient-to-br from-slate-50 to-slate-100 rounded-lg overflow-hidden dark:border dark:from-slate-800 dark:to-slate-700 dark:border-slate-700 selection:bg-salmon-500 selection:bg-opacity-25 relative text-base text-slate-800 border border-slate-200">
    <pre><code data-code-target="snippet" data-clipboard-target="source" class="language-bash text-slate-800 dark:text-slate-100"># Path
<%= route[:path].to_param.strip %>

# Controller/Action
<%= route[:reqs].to_param.strip %></code></pre>
  </div>
  </div>
</div>
