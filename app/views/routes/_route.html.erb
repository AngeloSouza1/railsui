<div class="route_row grid grid-cols-11 text-sm items-center py-5" data-helper='path'>
  <div data-route-name='<%= route[:name] %>' class="sm:col-span-3">
    <% if route[:name].present? %>
      <%# TODO: Click to copy + tooltips %>
      <div class="relative group">
        <button type="button">
          <div class="absolute -left-8 top-0 opacity-0 group-hover:opacity-100 p-1 rounded-full group-hover:bg-indigo-50/50 transition ease-in-out duration-200 w-6 h-6 flex items-center justify-center">
            <%= render_svg "copy", styles: "w-3 h-3 fill-current text-indigo-400" %>
          </div>
          <%= route[:name] %><span class='helper'>_path</span>
        </button>
      </div>
    <% end %>
  </div>
  <div class="sm:col-span-1">

    <div class="inline-flex items-center font-semibold px-1 py-px rounded text-xs <%= route_verb_classes(route[:verb]) %>">
      <%= route[:verb] %>
    </div>
  </div>
  <div data-route-path='<%= route[:path] %>' class="sm:col-span-3 overflow-hidden">
    <div class="font-medium">
      <%= truncate(route[:path], length: 60) %>
    </div>
  </div>
  <div class="sm:col-span-4 overflow-hidden">
    <%= simple_format truncate(route[:reqs], length: 60) %>
  </div>
</div>
