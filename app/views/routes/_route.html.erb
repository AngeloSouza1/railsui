<div data-search-target="result" data-search-route-value="<%= route[:name].downcase %> <%= route[:reqs].downcase %>" data-search-route-nested="<%= route[:name].present? ? false : true %>">
  <% if route[:name].present? %>
  <div class="grid grid-cols-11 text-sm items-start py-4">
    <div class="sm:col-span-5 text-base">
      <% if route[:name].present? %>
        <div class="relative group">
          <button type="button"
          data-controller="clipboard"
          data-action="click->clipboard#copy">
            <div class="absolute -left-8 top-0 opacity-0 group-hover:opacity-100 p-1 rounded-full group-hover:bg-indigo-50/50 dark:group-hover:bg-slate-700 transition ease-in-out duration-200 w-6 h-6 flex items-center justify-center">
              <%= render_svg "copy", styles: "w-3 h-3 fill-current text-indigo-400 dark:text-slate-100" %>
            </div>
            <div
              data-clipboard-target="source"
              class="group-hover:text-indigo-600 dark:group-hover:text-indigo-400 font-medium text-lg">
              <%= route[:name] %><span data-helper-target="extension">_path</span>
            </div>
          </button>
        </div>
      <% end %>
      <% if route[:verb].present? %>
      <div class="mt-3 inline-flex items-center font-bold px-1 h-5 rounded text-xs -ml-1 <%= route_verb_classes(route[:verb]) %>"><%= route[:verb] %></div>
      <% end %>
    </div>
    <div class="sm:col-span-6">
      <div data-controller="code" class="mt-5 mb-8 first:mt-0 last:mb-0 bg-gradient-to-br rounded-lg overflow-hidden border from-slate-900 to-slate-700 border-slate-700 selection:bg-salmon-500 selection:bg-opacity-25 relative text-base text-white">
        <pre><code data-code-target="snippet" data-clipboard-target="source" class="language-bash text-slate-100"># Path
<%= route[:path].to_param.strip %>

# Controller/Action
<%= route[:reqs].to_param.strip %></code></pre>
      </div>
    </div>
  </div>
  <% else %>
  <details class="py-4 group marker:content-['']">
    <summary class="flex items-center w-full cursor-pointer select-none justify-between text-left text-base font-semibold text-slate-900 dark:text-slate-200 group-open:text-indigo-600 group-open:dark:text-indigo-400 [&amp;::-webkit-details-marker]:hidden">
    <div class="flex items-center">
      <% if route[:verb].present? %>
        <div class="w-16">
          <div class="inline-flex items-center font-bold px-1 h-5 rounded text-xs -ml-1 <%= route_verb_classes(route[:verb]) %>"><%= route[:verb] %></div>
        </div>
      <% end %>
      <span class="text-sm text-slate-500 font-normal"
      ><%= route[:reqs] %></span>
    </div>
    <svg class="mt-0.5 ml-4 h-6 w-6 flex-none stroke-slate-700 dark:stroke-slate-400 group-open:stroke-indigo-500" fill="none" xmlns="http://www.w3.org/2000/svg" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 12H6"></path><path class="group-open:hidden" d="M12 6v12"></path></svg>
  </summary>
    <div class="grid grid-cols-11 text-sm items-start py-4">
      <div class="sm:col-span-5"></div>
      <div class="sm:col-span-6">
        <div data-controller="code" class="mt-5 mb-8 first:mt-0 last:mb-0 bg-gradient-to-br rounded-lg overflow-hidden border from-slate-900 to-slate-700 border-slate-700 selection:bg-salmon-500 selection:bg-opacity-25 relative text-base text-white">
          <pre><code data-code-target="snippet" data-clipboard-target="source" class="language-bash text-slate-100"># Path
<%= route[:path].to_param.strip %>

# Controller/Action
<%= route[:reqs].to_param.strip %></code></pre>
        </div>
      </div>
    </div>
  </details>
  <% end %>
</div>
