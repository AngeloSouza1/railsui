<!DOCTYPE html>
<html class="tw-h-full tw-antialiased">
  <head>
    <title>
      <% if content_for?(:title ) %>
        <%= yield :title %>
      <% else %>
        Rails UI
      <% end %>
    </title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1">

    <%= favicon_link_tag "favicon.svg" %>
    <%= javascript_include_tag "railsui/application", "application" %>
    <%= javascript_include_tag "https://unpkg.com/alpinejs@3.10.3/dist/cdn.min.js", defer: true %>

    <%= stylesheet_link_tag "railsui/application", "application" %>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Fira+Code&display=swap" rel="stylesheet">

    <%= yield :head %>

  </head>

  <body class="tw-font-normal tw-leading-normal tw-text-slate-800 lg:tw-h-screen tw-relative <%= content_for?(:bg_theme).present? ? yield(:bg_theme) : "tw-bg-white dark:tw-bg-slate-900 dark:tw-text-slate-100" %>" data-controller="toggle scroll">
    <%= render "railsui/shared/flash" %>
    <div class="lg:tw-fixed tw-top-0 tw-left-0 tw-w-full tw-backdrop-blur tw-flex-none transition-colors tw-duration-500 tw-z-30 lg:tw-border-b lg:tw-border-slate-900/10 dark:tw-border-slate-100 tw-bg-white/60 supports-backdrop-blur:tw-bg-white/60 dark:tw-bg-transparent">
      <div class="tw-py-4 tw-px-4 tw-border-b lg:tw-px-6 lg:tw-border-0 lg:tw-mx-0 tw-flex tw-items-center dark:lg:tw-border-b dark:tw-border-slate-700">
        <%= link_to  main_app.root_path, class: "tw-flex tw-flex-shrink-0 lg:tw-border tw-bg-white tw-w-8 tw-h-8 tw-items-center tw-justify-center tw-rounded-lg hover:tw-shadow-sm tw-group hover:tw-shadow-indigo focus:tw-ring-4 focus:tw-ring-indigo-300 focus:tw-ring-opacity-50 tw-rounded-lg dark:tw-bg-slate-700/50 dark:tw-border-slate-500/70", data: {tippy_content: "Back to main app", controller: "tooltip"} do %>
          <div class="tw-flex tw-items-center  tw-text-sm">
            <%= render_svg "chevron-left", styles: "tw-stroke-current tw-text-slate-500 group-hover:tw-text-indigo-400 lg:tw-w-4 tw-h-7 lg:tw-h-4 tw-w-7 dark:tw-text-slate-300 group-hover:dark:tw-text-indigo-300" %>
          </div>
        <% end %>
        <div class="lg:tw-ml-8 tw-flex tw-justify-between tw-items-center tw-w-full tw-flex-wrap" >
          <div class="tw-flex-1 tw-flex-wrap tw-justify-center lg:tw-justify-start tw-flex lg:tw-space-x-6 tw-items-center">
            <div class="lg:tw-w-auto tw-w-full tw-flex-1 lg:tw-flex-grow-0">
              <%= render "railsui/shared/logo" %>
            </div>
            <% if Railsui.config.css_framework.present? %>
              <div class="lg:tw-block tw-hidden">
                <%= render "railsui/shared/theme_label" %>
              </div>
            <% end %>
            <button role="toggle nav" class="lg:tw-hidden tw-block tw-p-1 focus:tw-ring-indigo-300 focus:tw-ring-4 tw-rounded-lg focus:tw-ring-opacity-50" data-action="click->toggle#toggle">
              <%= render_svg "menu", styles: "tw-stroke-current tw-w-7 tw-h-7 tw-text-slate-600" %>
            </button>
          </div>
          <div class="lg:tw-block tw-hidden">
            <%= render "railsui/shared/top_nav" %>
          </div>
        </div>
      </div>
    </div>

    <div class="lg:tw-flex" x-data="{navOpen: <%= design_system_navgiation_state %>}">
      <button
        class="lg:tw-top-[80px] tw-fixed tw-z-50 tw-px-3 tw-py-2 tw-rounded-r-lg tw-shadow-sm tw-left-2 tw-top-2 tw-bg-white tw-border tw-border-slate-200 hover:tw-bg-slate-50 tw-group lg:tw-block tw-hidden dark:tw-bg-slate-700 dark:tw-border-slate-600 hover:dark:tw-bg-slate-800"
        :class="navOpen ? 'lg:tw-left-[299px]' : 'lg:tw-left-0'"
        @click.prevent="navOpen = ! navOpen">
        <span x-show="navOpen">
          <%= render_svg "eye-close", styles: "tw-w-4 tw-h-4 tw-stroke-current tw-text-slate-400 dark:tw-text-slate-200 group-hover:tw-text-indigo-600 group-hover:dark:tw-text-indigo-400" %>
        </span>
        <span x-show="!navOpen">
          <%= render_svg "eye-open", styles: "tw-w-4 tw-h-4 tw-stroke-current tw-text-slate-400 dark:tw-text-slate-200 group-hover:tw-text-indigo-600 group-hover:dark:tw-text-indigo-400" %>
        </span>
      </button>
      <div id="system-nav" class="lg:tw-flex tw-hidden tw-flex-col lg:tw-w-[300px] w-full tw-border-r  tw-bg-white tw-h-full lg:tw-fixed tw-top-[73px] tw-left-0 tw-overflow-y-auto tw-z-50 dark:tw-bg-slate-900 dark:tw-border-slate-700"
       x-show="navOpen"
       data-toggle-target="toggleable"
       data-scroll-target="scrollitem"
       >
        <div class="tw-flex-1">
          <div class="lg:tw-py-0 tw-py-2 lg:tw-border-b-0 tw-border-b tw-border-slate-200 dark:tw-border-slate-700 lg:tw-hidden lg:tw-px-0 tw-px-3 lg:tw-shadow-none tw-shadow-sm">
            <%= render "railsui/shared/top_nav" %>
          </div>
          <% if Railsui.config.css_framework.present? %>
            <%= render "railsui/themes/#{Railsui.config.css_framework}/#{Railsui.config.theme}/nav" %>
          <% else %>
            <%= render "railsui/shared/nav" %>
          <% end %>
        </div>
      </div>
      <div
      :class="navOpen ? 'lg:tw-left-[150px]' : ''"
      class="lg:tw-top-[72px]  tw-flex-1 tw-mx-auto lg:tw-py-16 tw-px-4 tw-py-8 tw-relative <%= content_for?(:fullwidth).present? ? "tw-w-full" : "tw-max-w-4xl" %> ">

        <%= yield %>
      </div>
    </div>

    <%= yield :demo_scripts %>
  </body>
</html>
